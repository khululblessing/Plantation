@model AgricultureApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Assistant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
	<style>
		.wrapper {
			width: stretch;
			justify-content: space-evenly;
			background: #fff;
			border-radius: 15px;
			margin: auto;
			box-shadow: 0px 15px 20px rgba(0,0,0,0.1);
			padding: 20px;
		}

            .wrapper .title {
                font-size: 35px;
                font-weight: 600;
                text-align: center;
                line-height: 100px;
                color: #fff;
                user-select: none;
                border-radius: 15px 15px 0 0;
                background: #123524;
            }


		.content form .user-details {
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			margin: 20px 0 12px 0;
		}

		form .user-details .input-box {
			margin-bottom: 15px;
			width: calc(100% / 2 - 20px);
		}

		form .input-box span.details {
			display: block;
			font-weight: 500;
			margin-bottom: 5px;
		}

		.user-details .input-box input {
			height: 45px;
			width: 100%;
			outline: none;
			font-size: 16px;
			border-radius: 5px;
			padding-left: 15px;
			border: 1px solid #ccc;
			border-bottom-width: 2px;
			transition: all 0.3s ease;
		}

            .user-details .input-box input:focus,
            .user-details .input-box input:valid {
                border-color: #a9ba9d;
            }

		form .button {
			height: 45px;
			margin: 35px 0
		}

            form .button input {
                height: 100%;
                width: 100%;
                border-radius: 5px;
                border: none;
                color: #fff;
                font-size: 18px;
                font-weight: 500;
                letter-spacing: 1px;
                cursor: pointer;
                transition: all 0.3s ease;
                background: #123524;
            }

        .button1 {
            padding: 0.5em;
            padding-left: 1.1em;
            padding-right: 1.1em;
            border-radius: 5px;
            margin-right: 0.5em;
            border: none;
            outline: none;
            transition: .4s ease-in-out;
            background-color: #2e8b57;
            color: #2e8b57;
            text-align: center;
        }

            .button1:hover {
                background-color: #006400;
                color: #2e8b57;
            }

        .button {
            display: flex; /* Use flexbox to center content */
            justify-content: center; /* Center content horizontally */
            align-items: center; /* Center content vertically */
            padding: 0.5em;
            padding-left: 1.1em;
            padding-right: 1.1em;
            border-radius: 5px;
            margin-right: 0.5em;
            border: none;
            outline: none;
            transition: 0.4s ease-in-out;
            background-color: #013220;
            color: white;
        }

        .button:hover {
            background-color: #006400;
            color: white;
        }

	</style>
</head>

<div class="wrapper">
	<div class="title">Fumigator Registration</div>
    <div class="content">
        @using (Html.BeginForm(actionName: "Assistant", controllerName: "Account", routeValues: null, method: FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <!-- Create Personal Info -->
            <form action="#">
				<div class="user-details">
					<!-- First Name -->
					<div class="input-box">
						<span class="details">First Name</span>
						@Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "John" })
						@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
					</div>
					<!-- Last Name -->
					<div class="input-box">
						<span class="details">Last Name</span>
						@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Doe" })
						@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
					</div>
					<!-- Email -->
					<div class="input-box">
						<span class="details">Email Address</span>
						@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Example@emailsample.com" })
						@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
					</div>
					
					<!-- Gender -->
					<div class="input-box">
						<span class="details">Gender</span>
						@Html.TextBoxFor(m => m.Gender, new { @class = "form-control", @placeholder = "Example@emailsample.com" })
						@Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
					</div>

					<!-- Picture -->
					<div class="input-box">
						<span class="details">Driver Pic</span>
						<input type="file" name="img_upload" accept=".jpeg,.jpg,.png" onchange="readURL(this);" id="file-upload" class="form-control" required="required" />

					</div>


					<!-- Contact Number -->
					<div class="input-box">
						<span class="details">Contact No</span>
						@Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @placeholder = "0712345678" })
						@Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
					</div>
				</div>
                <div class="button">
                    <!-- Submit Button -->
                    <input class="button1" type="submit" value="Add Fumigator"  />
                </div>

            </form>

        }
    </div>
</div>
